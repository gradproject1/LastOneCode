<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.user1.urnextapp.verification">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="249dp"
            android:layout_height="37dp"
            android:layout_marginLeft="47dp"
            android:focusable="false"
            android:fontFamily="@font/trebuc"
            android:text="Verification email"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/virifyEmail"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/trebuc"
            android:text=""
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/sendAgain"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:background="@drawable/button"
            android:fontFamily="@font/trebuc"
            android:text="Send another one"
            android:textAllCaps="false"
            android:textColor="#204171"
            android:textSize="18sp"
            android:shadowColor="#e2e2e2"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="3dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/trebuc"
            android:textAlignment="center"
            android:text="I press the link Let's Start"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>
